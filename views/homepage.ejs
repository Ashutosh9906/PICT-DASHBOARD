<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>PICT Dashboard</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons+Sharp" rel="stylesheet">
</head>
<style>
    :root {
        --colorI: #f7f2eb;
        --colorII: #ffffff;
        --colorIII: #dde3ff;
        --colorIV: #bad6eb;
        --colorV: #7096d1;
        --colorVI: #334eac;
        --colorVII: #081f5c;
        --shadow: 0 4px 20px rgba(0, 0, 0, 0.07);
        --new-message-bg: #fff3cd;
        --new-message-border: #ffc107;
    }

    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        font-family: 'Poppins', sans-serif;
    }

    body {
        background-color: var(--colorIV);
        display: flex;
        height: 100vh;
        overflow: hidden;
    }

    /* --- Vertical Navigation Sidebar --- */
    .sidebar {
        margin: 16px;
        background-color: var(--colorII);
        border-right: 1px solid #e0e0e0;
        border-radius: 16px;
        width: 80px;
        height: calc(100vh - 32px);
        display: flex;
        flex-direction: column;
        align-items: center;
        padding: 1.5rem 0;
        transition: width 0.3s ease, transform 0.3s ease;
        position: relative;
        z-index: 1000;
    }

    .sidebar:hover {
        width: 180px;
    }

    .sidebar .logo {
        font-size: 2rem;
        color: var(--colorVI);
        margin-bottom: 2rem;
    }

    .sidebar nav {
        display: flex;
        flex-direction: column;
        gap: 1.5rem;
        width: 100%;
    }

    .sidebar .nav-element {
        display: flex;
        align-items: center;
        gap: 1rem;
        color: #7a7a7a;
        text-decoration: none;
        padding: 0.8rem 1.5rem;
        position: relative;
        overflow: hidden;
        white-space: nowrap;
        transition: all 0.3s ease;
    }

    .sidebar .nav-element .material-icons-sharp {
        font-size: 1.8rem;
        transition: color 0.3s ease;
    }

    .sidebar .nav-element .nav-text {
        font-weight: 500;
        transition: opacity 0.2s ease;
        opacity: 0;
    }

    .sidebar:hover .nav-element .nav-text {
        opacity: 1;
    }

    .sidebar .nav-element:hover,
    .sidebar .nav-element.active {
        color: var(--colorVI);
    }

    .sidebar .nav-element.active {
        background-color: var(--colorIII);
    }

    .sidebar .nav-element.active::before {
        content: '';
        position: absolute;
        left: 0;
        top: 0;
        width: 5px;
        height: 100%;
        background-color: var(--colorVI);
    }

    /* === Dropdown Styling === */
    .dropdown {
        width: 100%;
        display: flex;
        flex-direction: column;
    }

    .dropdown-toggle {
        display: flex;
        align-items: center;
        gap: 1rem;
        padding: 0.8rem 1.5rem;
        color: #7a7a7a;
        cursor: pointer;
        transition: all 0.3s ease;
        position: relative;
        white-space: nowrap;
    }

    .dropdown-toggle:hover {
        color: var(--colorVI);
        background-color: var(--colorIII);
    }

    .dropdown-toggle .material-icons-sharp {
        font-size: 1.8rem;
    }

    .dropdown-toggle .nav-text {
        font-weight: 500;
        opacity: 0;
        transition: opacity 0.2s ease;
    }

    .sidebar:hover .dropdown-toggle .nav-text {
        opacity: 1;
    }

    /* Arrow icon */
    .arrow {
        font-size: 1.2rem;
        color: var(--colorV);
        transition: transform 0.3s ease, opacity 0.2s ease;
        opacity: 0;
        margin-left: auto;
    }

    .sidebar:hover .arrow {
        opacity: 1;
    }

    .dropdown.open .arrow {
        transform: rotate(180deg);
    }

    /* Dropdown menu */
    .dropdown-menu {
        display: flex;
        flex-direction: column;
        overflow: hidden;
        max-height: 0;
        opacity: 0;
        transition: all 0.3s ease;
        background-color: var(--colorII);
    }

    .dropdown.open .dropdown-menu {
        max-height: 200px;
        opacity: 1;
    }

    /* Show dropdown on hover */
    .dropdown:hover .dropdown-menu {
        max-height: 200px;
        opacity: 1;
    }

    .dropdown:hover .arrow {
        transform: rotate(180deg);
    }

    /* Submenu links */
    .sub-link {
        display: flex;
        align-items: center;
        gap: 1rem;
        padding: 0.6rem 1.5rem 0.6rem 3rem;
        text-decoration: none;
        color: #555;
        font-size: 0.9rem;
        transition: all 0.25s ease;
        white-space: nowrap;
    }

    .sub-link .material-icons-sharp {
        font-size: 1.4rem;
    }

    .sub-link span:last-child {
        opacity: 0;
        transition: opacity 0.2s ease;
    }

    .sidebar:hover .sub-link span:last-child {
        opacity: 1;
    }

    .sub-link:hover {
        background-color: var(--colorIII);
        color: var(--colorVI);
    }

    /* Mobile menu toggle button */
    .mobile-menu-toggle {
        display: none;
        position: absolute;
        top: 50%;
        right: 0;
        transform: translateY(-50%);
        z-index: 1001;
        background-color: var(--colorVI);
        color: white;
        border: none;
        border-radius: 12px;
        padding: 0.6rem;
        cursor: pointer;
        box-shadow: var(--shadow);
        transition: all 0.3s ease;
    }

    .mobile-menu-toggle:active {
        transform: translateY(-50%) scale(0.95);
    }

    .mobile-menu-toggle .material-icons-sharp {
        font-size: 1.4rem;
        display: block;
    }

    /* --- Main Content Area --- */
    .main-container {
        flex-grow: 1;
        padding: 2rem;
        overflow-y: auto;
        overflow-x: hidden;
        height: 100vh;
        width: 100%;
        max-width: 100%;
    }

    header {
        margin-bottom: 2rem;
        position: relative;
    }

    header h1 {
        font-size: 2.2rem;
        color: var(--colorVII);
        font-weight: 700;
        word-wrap: break-word;
    }

    /* Card Styling for Sections */
    .card {
        background-color: var(--colorII);
        padding: 1.5rem;
        border-radius: 16px;
        box-shadow: var(--shadow);
        margin-bottom: 2rem;
        max-width: 100%;
        overflow: hidden;
    }

    .card h2 {
        font-size: 1.4rem;
        color: var(--colorVI);
        margin-bottom: 1rem;
        word-wrap: break-word;
        display: flex;
        align-items: center;
        gap: 0.8rem;
    }

    .new-count-badge {
        background: var(--new-message-border);
        color: #fff;
        padding: 0.25rem 0.7rem;
        border-radius: 20px;
        font-size: 0.85rem;
        font-weight: 600;
        letter-spacing: 0.3px;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        min-width: 28px;
        animation: pulse 2s ease-in-out infinite;
    }

    @keyframes pulse {

        0%,
        100% {
            transform: scale(1);
        }

        50% {
            transform: scale(1.05);
        }
    }

    .card p {
        line-height: 1.6;
        color: #555;
        word-wrap: break-word;
        overflow-wrap: break-word;
    }

    /* Table Styling */
    .table-container h2 {
        margin-bottom: 1.5rem;
    }

    table {
        width: 100%;
        border-collapse: collapse;
        text-align: left;
    }

    thead {
        background-color: #f9f9f9;
    }

    th,
    td {
        padding: 1rem;
        border-bottom: 1px solid #eee;
    }

    th {
        font-weight: 600;
        color: var(--colorVII);
        text-transform: uppercase;
        font-size: 0.85rem;
    }

    tbody tr:hover {
        background-color: #f7faff;
    }

    td .content-link {
        color: var(--colorV);
        text-decoration: none;
        font-weight: 500;
    }

    td .content-link:hover {
        text-decoration: underline;
    }

    /* NEW: Email Grid Layout for larger screens */
    #emails {
        max-width: 100%;
        margin: 0;
        padding: 0;
        overflow-y: auto;
        overflow-x: hidden;
        display: grid;
        grid-template-columns: 1fr;
        gap: 1rem;
    }

    /* Multi-column layout for larger screens */
    @media screen and (min-width: 1200px) {
        #emails {
            grid-template-columns: repeat(2, 1fr);
        }
    }

    @media screen and (min-width: 1600px) {
        #emails {
            grid-template-columns: repeat(3, 1fr);
        }
    }

    .email {
        padding: 1rem;
        border: 1px solid #eee;
        border-radius: 12px;
        background: var(--colorII);
        box-shadow: var(--shadow);
        transition: transform 0.2s ease, background-color 0.3s ease, box-shadow 0.2s ease;
        max-width: 100%;
        overflow: hidden;
        position: relative;
        display: flex;
        flex-direction: column;
        height: 100%;
    }

    .email:hover {
        transform: translateY(-2px);
        box-shadow: 0 6px 24px rgba(0, 0, 0, 0.12);
    }

    /* New message styling */
    .email.new-message {
        background: var(--new-message-bg);
        border: 2px solid var(--new-message-border);
        animation: fadeIn 0.5s ease-in-out;
    }

    @keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(-10px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .email-header {
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
        margin-bottom: 0.5rem;
        gap: 0.5rem;
    }

    .subject {
        font-weight: 600;
        font-size: 1rem;
        color: var(--colorVI);
        word-wrap: break-word;
        overflow-wrap: break-word;
        flex: 1;
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    .subject pre,
    .date pre,
    .from pre,
    .body pre {
        white-space: pre-wrap;
        word-wrap: break-word;
        overflow-wrap: break-word;
        font-family: 'Poppins', sans-serif;
        margin: 0;
    }

    /* NEW tag badge in header */
    .email.new-message .subject::before {
        content: 'NEW';
        display: inline-block;
        background: var(--new-message-border);
        color: #fff;
        padding: 0.25rem 0.6rem;
        border-radius: 6px;
        font-size: 0.7rem;
        font-weight: 600;
        letter-spacing: 0.5px;
        flex-shrink: 0;
    }

    .from {
        color: #555;
        margin-bottom: 0.5rem;
        font-size: 0.9rem;
        word-wrap: break-word;
        overflow-wrap: break-word;
    }

    .date {
        font-size: 0.85rem;
        color: #999;
        word-wrap: break-word;
        overflow-wrap: break-word;
        white-space: nowrap;
        flex-shrink: 0;
    }

    .body {
        color: #444;
        line-height: 1.4;
        font-size: 0.95rem;
        word-wrap: break-word;
        overflow-wrap: break-word;
        max-width: 100%;
        flex: 1;
    }

    .pagination {
        display: flex;
        gap: 10px;
        justify-content: center;
        align-items: center;
        margin-top: 1.5rem;
        flex-wrap: wrap;
        grid-column: 1 / -1;
        /* Span all columns in grid */
    }

    .page-btn {
        background: var(--colorII);
        border: 1px solid #ccc;
        padding: 0.5rem 1rem;
        border-radius: 8px;
        color: var(--colorVI);
        text-decoration: none;
        font-weight: 500;
        transition: all 0.3s ease;
    }

    .page-btn:hover {
        background: var(--colorIII);
    }

    .page-btn.active {
        background: var(--colorVI);
        color: white;
        border-color: var(--colorVI);
    }

    /* ========================================
   RESPONSIVE DESIGN - TABLET
   ======================================== */
    @media screen and (max-width: 1024px) {
        header h1 {
            font-size: 1.8rem;
        }

        .main-container {
            padding: 1.5rem;
        }

        .card {
            padding: 1.2rem;
        }

        .card h2 {
            font-size: 1.2rem;
        }

        .sidebar {
            width: 70px;
        }

        .sidebar:hover {
            width: 160px;
        }

        #emails {
            grid-template-columns: 1fr;
        }
    }

    /* ========================================
   RESPONSIVE DESIGN - MOBILE
   ======================================== */
    @media screen and (max-width: 768px) {
        body {
            flex-direction: column;
        }

        .mobile-menu-toggle {
            display: flex;
            align-items: center;
            justify-content: center;
        }

        header {
            display: flex;
            align-items: center;
            justify-content: space-between;
        }

        header h1 {
            font-size: 1.5rem;
            flex: 1;
        }

        .sidebar {
            position: fixed;
            left: 0;
            top: 0;
            margin: 0;
            width: 260px;
            height: 100vh;
            border-radius: 0;
            transform: translateX(-100%);
            z-index: 999;
            box-shadow: 2px 0 10px rgba(0, 0, 0, 0.1);
        }

        .sidebar.mobile-open {
            transform: translateX(0);
        }

        .sidebar .nav-element .nav-text,
        .sidebar .dropdown-toggle .nav-text,
        .sidebar .arrow,
        .sidebar .sub-link span:last-child {
            opacity: 1;
        }

        .sidebar:hover {
            width: 260px;
        }

        .main-container {
            padding: 1rem;
            padding-top: 1rem;
            margin-left: 0;
            max-width: 100vw;
        }

        .card {
            padding: 1rem;
            border-radius: 12px;
        }

        .card h2 {
            font-size: 1.1rem;
        }

        .card p {
            font-size: 0.9rem;
        }

        #emails {
            grid-template-columns: 1fr;
        }

        .email {
            padding: 0.8rem;
        }

        .subject {
            font-size: 0.9rem;
        }

        .date {
            font-size: 0.75rem;
        }

        .body {
            font-size: 0.85rem;
        }

        th,
        td {
            padding: 0.5rem;
            font-size: 0.85rem;
        }

        .pagination {
            gap: 5px;
        }

        .page-btn {
            padding: 0.4rem 0.8rem;
            font-size: 0.85rem;
        }
    }

    /* ========================================
   RESPONSIVE DESIGN - SMALL MOBILE
   ======================================== */
    @media screen and (max-width: 480px) {
        .mobile-menu-toggle {
            padding: 0.5rem;
        }

        .mobile-menu-toggle .material-icons-sharp {
            font-size: 1.3rem;
        }

        .main-container {
            padding: 0.75rem;
            padding-top: 0.75rem;
            max-width: 100vw;
        }

        header h1 {
            font-size: 1.2rem;
        }

        .card {
            padding: 0.8rem;
            margin-bottom: 1rem;
        }

        .card h2 {
            font-size: 1rem;
            margin-bottom: 0.8rem;
        }

        .card p {
            font-size: 0.85rem;
            line-height: 1.5;
        }

        .email {
            padding: 0.7rem;
        }

        .email-header {
            flex-direction: column;
            align-items: flex-start;
            gap: 0.3rem;
        }

        .subject {
            font-size: 0.85rem;
        }

        .date {
            font-size: 0.7rem;
        }

        .body {
            font-size: 0.8rem;
        }

        .page-btn {
            padding: 0.35rem 0.6rem;
            font-size: 0.8rem;
        }

        .sidebar {
            width: 240px;
        }

        .sidebar:hover {
            width: 240px;
        }

        .sidebar .logo {
            font-size: 1.5rem;
            margin-bottom: 1.5rem;
        }

        .sidebar nav {
            gap: 1rem;
        }

        .email.new-message .subject::before {
            font-size: 0.65rem;
            padding: 0.2rem 0.5rem;
        }
    }

    /* Overlay for mobile menu */
    .sidebar-overlay {
        display: none;
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(0, 0, 0, 0.5);
        z-index: 998;
    }

    .sidebar-overlay.active {
        display: block;
    }

    @media screen and (max-width: 768px) {
        .sidebar-overlay.active {
            display: block;
        }
    }
</style>

<body>

    <div class="sidebar-overlay" id="sidebarOverlay"></div>

    <%- include('partials/sidebar') %>

        <main class="main-container">
            <header>
                <h1>PICT Dashboard</h1>
                <button class="mobile-menu-toggle" id="mobileMenuToggle">
                    <span class="material-icons-sharp">menu</span>
                </button>
            </header>

            <section class="card about-section">
                <h2>Welcome to the Course Portal</h2>
                <p>
                    Stay updated. Never miss important messages.<br>
                    This platform helps you keep track of essential emails and notifications in one place.
                </p>
                <br>
                <p>
                    <strong>Managed by:</strong> Kirti Digholkar
                </p>
            </section>

            <section class="card table-container">
                <h2>
                    Recent Updates
                    <span class="new-count-badge" id="newMessageCount" style="display: none;">0</span>
                </h2>
                <div id="emails">
                    <% if (allMails && allMails.length) { %>
                        <% allMails.forEach(email=> { %>
                            <div class="email" data-email-index="<%= allMails.indexOf(email) %>">
                                <div class="email-header">
                                    <div class="subject">
                                        <pre><%= email.subject %></pre>
                                    </div>
                                    <div class="date">
                                        <pre><%= email.date %></pre>
                                    </div>
                                </div>
                                <!-- <div class="from">
                                <pre><%= email.from %></pre>
                            </div> -->
                                <div class="body">
                                    <%- email.body %>
                                </div>
                            </div>
                            <% }) %>
                                <% } else { %>
                                    <p>No emails yet.</p>
                                    <% } %>
                                        <div class="pagination">
                                            <% if (totalPages> 1) { %>
                                                <% if (currentPage> 1) { %>
                                                    <a href="/messages?page=<%= currentPage - 1 %>&limit=5"
                                                        class="page-btn">Previous</a>
                                                    <% } %>

                                                        <% for (let i=1; i <=totalPages; i++) { %>
                                                            <a href="/messages?page=<%= i %>&limit=5"
                                                                class="page-btn <%= i === currentPage ? 'active' : '' %>">
                                                                <%= i %>
                                                            </a>
                                                            <% } %>

                                                                <% if (currentPage < totalPages) { %>
                                                                    <a href="/messages?page=<%= currentPage + 1 %>&limit=5"
                                                                        class="page-btn">Next</a>
                                                                    <% } %>
                                                                        <% } %>
                                        </div>
                </div>
            </section>
        </main>

        <script>
            // Mobile menu toggle
            const mobileMenuToggle = document.getElementById('mobileMenuToggle');
            const sidebar = document.querySelector('.sidebar');
            const sidebarOverlay = document.getElementById('sidebarOverlay');

            mobileMenuToggle.addEventListener('click', function () {
                sidebar.classList.toggle('mobile-open');
                sidebarOverlay.classList.toggle('active');
            });

            sidebarOverlay.addEventListener('click', function () {
                sidebar.classList.remove('mobile-open');
                sidebarOverlay.classList.remove('active');
            });

            // Dropdown toggle functionality
            const dropdownToggle = document.querySelector('.dropdown-toggle');
            if (dropdownToggle) {
                dropdownToggle.addEventListener('click', function (e) {
                    e.preventDefault();
                    const dropdown = this.parentElement;
                    dropdown.classList.toggle('open');
                });
            }

            // Connect to SSE endpoint
            const eventSource = new EventSource("/events");

            eventSource.onmessage = function (event) {
                const email = JSON.parse(event.data);
                console.log("ðŸ“© New Email:", email);

                const container = document.getElementById("emails");
                const div = document.createElement("div");
                div.className = "email new-message";
                div.innerHTML = `
        <div class="email-header">
            <div class="subject"><pre>${email.subject}</pre></div>
            <div class="date"><pre>${email.date}</pre></div>
        </div>
        <div class="body"><pre>${email.body}</pre></div>
      `;
                container.prepend(div);

                // Update localStorage
                const currentCount = Number(localStorage.getItem("totalMessageCount") || 0);
                localStorage.setItem("totalMessageCount", currentCount + 1);

                // Update new message count badge
                const newCountBadge = document.getElementById('newMessageCount');
                const currentBadgeCount = Number(newCountBadge.textContent || 0);
                newCountBadge.textContent = currentBadgeCount + 1;
                newCountBadge.style.display = 'inline-flex';
            };

            document.querySelectorAll(".sub-link").forEach(link => {
                link.addEventListener("click", event => {
                    event.preventDefault();
                    const type = event.currentTarget.dataset.type;
                    window.location.href = `/messages/getSpecificMessage?type=${type}`;
                });
            });

            // Highlight new messages
            const currentPage = <%= currentPage %>;
            const limit = 2; // Must match your backend limit
            const backendCount = <%= totalMessages %>;
            const storedCount = Number(localStorage.getItem("totalMessageCount") || 0);
            const difference = backendCount - storedCount;

            console.log("Backend Count:", backendCount);
            console.log("Stored Count:", storedCount);
            console.log("New Messages:", difference);

            // Update new message count badge
            const newCountBadge = document.getElementById('newMessageCount');
            if (difference > 0) {
                newCountBadge.textContent = difference;
                newCountBadge.style.display = 'inline-flex';

                // Calculate which messages to highlight on current page
                const startIndex = (currentPage - 1) * limit;
                const endIndex = currentPage * limit;

                // How many new messages are before current page
                const newMessagesBeforeCurrentPage = Math.max(0, difference - startIndex);

                if (newMessagesBeforeCurrentPage > 0) {
                    // Calculate how many to highlight on this page
                    const highlightCount = Math.min(newMessagesBeforeCurrentPage, limit);

                    // Get all email elements on current page
                    const emails = document.querySelectorAll('.email');

                    // Highlight the first 'highlightCount' messages
                    for (let i = 0; i < highlightCount && i < emails.length; i++) {
                        emails[i].classList.add('new-message');
                    }

                    console.log(`Highlighting ${highlightCount} messages on page ${currentPage}`);
                }
            } else {
                newCountBadge.style.display = 'none';
            }

            // Update localStorage only if backend count is greater
            if (backendCount > storedCount) {
                localStorage.setItem("totalMessageCount", backendCount);
            }

        </script>
</body>

</html>