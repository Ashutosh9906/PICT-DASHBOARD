<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Professor's Dashboard</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons+Sharp" rel="stylesheet">
</head>
<style>
    :root {
        --colorI: #f7f2eb;
        --colorII: #ffffff;
        --colorIII: #dde3ff;
        --colorIV: #bad6eb;
        --colorV: #7096d1;
        --colorVI: #334eac;
        --colorVII: #081f5c;
        --shadow: 0 4px 20px rgba(0, 0, 0, 0.07);
    }

    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        font-family: 'Poppins', sans-serif;
    }

    body {
        background-color: var(--colorIV);
        display: flex;
        height: 100vh;
        overflow: hidden;
    }

    /* --- Vertical Navigation Sidebar --- */
    .sidebar {
        margin: 16px;
        background-color: var(--colorII);
        border-right: 1px solid #e0e0e0;
        border-radius: 16px;
        width: 80px;
        height: 100%;
        display: flex;
        flex-direction: column;
        align-items: center;
        padding: 1.5rem 0;
        transition: width 0.3s ease;
    }

    .sidebar:hover {
        width: 180px;
    }

    .sidebar .logo {
        font-size: 2rem;
        color: var(--colorVI);
        margin-bottom: 2rem;
    }

    .sidebar nav {
        display: flex;
        flex-direction: column;
        gap: 1.5rem;
        width: 100%;
    }

    .sidebar .nav-element {
        display: flex;
        align-items: center;
        gap: 1rem;
        color: #7a7a7a;
        text-decoration: none;
        padding: 0.8rem 1.5rem;
        position: relative;
        overflow: hidden;
        white-space: nowrap;
    }

    .sidebar .nav-element .material-icons-sharp {
        font-size: 1.8rem;
        transition: color 0.3s ease;
    }

    .sidebar .nav-element .nav-text {
        font-weight: 500;
        transition: opacity 0.2s ease;
        opacity: 0;
    }

    .sidebar:hover .nav-element .nav-text {
        opacity: 1;
    }

    .sidebar .nav-element:hover,
    .sidebar .nav-element.active {
        color: var(--colorVI);
    }

    .sidebar .nav-element.active {
        background-color: var(--colorIII);
    }

    .sidebar .nav-element.active::before {
        content: '';
        position: absolute;

        left: 0;
        top: 0;
        width: 5px;
        height: 100%;
        background-color: var(--colorVI);
    }

    .dropdown {
        position: relative;
        /* This is crucial for positioning the dropdown content */
        display: inline-block;
    }

    /* The dropdown content (hidden by default) */
    .dropdown-content {
        display: none;
        /* Hide the dropdown by default */
        position: absolute;
        /* Position it relative to the .dropdown container */
        background-color: #f1f1f1;
        min-width: 160px;
        box-shadow: 0px 8px 16px 0px rgba(0, 0, 0, 0.2);
        z-index: 1;
        /* Make sure it appears above other content */
        border-radius: 8px;
        /* Optional: for rounded corners */
    }

    /* Links inside the dropdown */
    .dropdown-content a {
        color: black;
        padding: 12px 16px;
        text-decoration: none;
        display: block;
        /* Make the entire area clickable */
        text-align: left;
    }

    /* Change color of dropdown links on hover */
    .dropdown-content a:hover {
        background-color: #dde3ff;
        /* Using a color from your theme */
    }

    /* The magic rule: Show the dropdown menu on hover */
    .dropdown:hover .dropdown-content {
        display: block;
    }

    /* --- Main Content Area --- */
    .main-container {
        flex-grow: 1;
        padding: 2rem;
        overflow-y: auto;
        /* Makes only this container scrollable */
        height: 100vh;
    }

    header {
        margin-bottom: 2rem;
    }

    header h1 {
        font-size: 2.2rem;
        color: var(--colorVII);
        font-weight: 700;
    }

    /* Card Styling for Sections */
    .card {
        background-color: var(--colorII);
        padding: 1.5rem;
        border-radius: 16px;
        box-shadow: var(--shadow);
        margin-bottom: 2rem;
    }

    .card h2 {
        font-size: 1.4rem;
        color: var(--colorVI);
        margin-bottom: 1rem;
    }

    .card p {
        line-height: 1.6;
        color: #555;
    }

    /* Table Styling */
    .table-container h2 {
        margin-bottom: 1.5rem;
    }

    table {
        width: 100%;
        border-collapse: collapse;
        text-align: left;
    }

    thead {
        background-color: #f9f9f9;
    }

    th,
    td {
        padding: 1rem;
        border-bottom: 1px solid #eee;
    }

    th {
        font-weight: 600;
        color: var(--colorVII);
        text-transform: uppercase;
        font-size: 0.85rem;
    }

    tbody tr:hover {
        background-color: #f7faff;
    }

    td .content-link {
        color: var(--colorV);
        text-decoration: none;
        font-weight: 500;
    }

    td .content-link:hover {
        text-decoration: underline;
    }

    #emails {
        max-width: 100%;
        margin: 0;
        padding: 0;
        overflow-y: auto;
    }

    .email {
        padding: 1rem;
        margin-bottom: 1rem;
        border: 1px solid #eee;
        border-radius: 12px;
        background: var(--colorII);
        box-shadow: var(--shadow);
        transition: transform 0.2s ease;
    }

    .email:hover {
        transform: translateY(-2px);
    }

    .email-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 0.5rem;
    }

    .subject {
        font-weight: 600;
        font-size: 1rem;
        color: var(--colorVI);
    }

    .from {
        color: #555;
        margin-bottom: 0.5rem;
        font-size: 0.9rem;
    }

    .date {
        font-size: 0.85rem;
        color: #999;
    }

    .body {
        color: #444;
        line-height: 1.4;
        font-size: 0.95rem;
    }

    /* === Sidebar Dropdown (Simple Roll Down, Clean) === */
    .dropdown {
        width: 100%;
        display: flex;
        flex-direction: column;
    }

    .dropdown-toggle {
        display: flex;
        align-items: center;
        justify-content: space-between;
        gap: 1rem;
        padding: 0.8rem 1.5rem;
        color: #7a7a7a;
        cursor: pointer;
        transition: background-color 0.25s ease;
    }

    .dropdown-toggle:hover {
        background-color: var(--colorIII);
        color: var(--colorVI);
    }

    /* Make sure icons always visible */
    .sidebar .dropdown .material-icons-sharp {
        font-size: 1.8rem;
    }

    /* Dropdown menu hidden by default */
    .dropdown-menu {
        display: flex;
        flex-direction: column;
        overflow: hidden;
        max-height: 0;
        opacity: 0;
        transition: all 0.3s ease;
        background-color: var(--colorII);
        border-left: 4px solid var(--colorVI);
        margin: 0;
        padding: 0;
    }

    /* Roll down cleanly on hover */
    .dropdown:hover .dropdown-menu {
        max-height: 100px;
        /* Enough for two items */
        opacity: 1;
    }

    /* Submenu links styling */
    .sub-link {
        display: flex;
        align-items: center;
        gap: 1rem;
        padding: 0.6rem 3.5rem;
        text-decoration: none;
        color: #555;
        font-size: 0.9rem;
        transition: background-color 0.25s ease, color 0.25s ease;
    }

    .sub-link:hover {
        background-color: var(--colorIII);
        color: var(--colorVI);
    }

    /* Small arrow rotation for clarity */
    .arrow {
        font-size: 1.2rem;
        color: var(--colorV);
        transition: transform 0.3s ease;
    }

    .dropdown:hover .arrow {
        transform: rotate(180deg);
    }

    /* Fix spacing â€” no gaps after dropdown */
    nav {
        display: flex;
        flex-direction: column;
        gap: 0;
    }

    .pagination {
        display: flex;
        gap: 10px;
        justify-content: center;
        align-items: center;
        margin-top: 1.5rem;
    }

    .page-btn {
        background: var(--colorII);
        border: 1px solid #ccc;
        padding: 0.5rem 1rem;
        border-radius: 8px;
        color: var(--colorVI);
        text-decoration: none;
        font-weight: 500;
        transition: all 0.3s ease;
    }

    .page-btn:hover {
        background: var(--colorIII);
    }

    .page-btn.active {
        background: var(--colorVI);
        color: white;
        border-color: var(--colorVI);
    }
</style>

<body>

    <aside class="sidebar">
        <div class="logo">
            <span class="material-icons-sharp">school</span>
        </div>
        <nav>
            <a class="nav-element active" href="#home">
                <span class="material-icons-sharp">dashboard</span>
                <span class="nav-text">Dashboard</span>
            </a>

            <!-- âœ… Dropdown for Courses -->
            <div class="nav-element dropdown">
                <div class="dropdown-toggle">
                    <span class="material-icons-sharp">book</span>
                    <span class="nav-text">Courses</span>
                    <span class="material-icons-sharp arrow">expand_more</span>
                </div>
                <div class="dropdown-menu">
                    <a href="#dsa" class="sub-link" data-type="DSA">
                        <span class="material-icons-sharp">code</span>
                        <span>DSA</span>
                    </a>
                    <a href="#esdl" class="sub-link" data-type="ESDL">
                        <span class="material-icons-sharp">memory</span>
                        <span>ESDL</span>
                    </a>
                </div>
            </div>


            <a class="nav-element" href="#grades">
                <span class="material-icons-sharp">assessment</span>
                <span class="nav-text">Grades</span>
            </a>

            <a class="nav-element" href="#messages">
                <span class="material-icons-sharp">mail_outline</span>
                <span class="nav-text">Messages</span>
            </a>
        </nav>
    </aside>


    <main class="main-container">
        <header>
            <h1>PICT Dashboard</h1>
        </header>

        <section class="card about-section">
            <h2>Welcome to the Course Portal</h2>
            <p>
                dashboard description
            </p>
            <br>
            <p>
                <strong>Managed by:</strong> faculty description
            </p>
        </section>

        <section class="card table-container">
            <h2>Recent Updates</h2>
            <div id="emails">
                <% if (allMails && allMails.length) { %>
                    <% allMails.forEach(email=> { %>
                        <div class="email">
                            <div class="email-header">
                                <div class="subject">
                                    <pre><%= email.subject %></pre>
                                </div>
                                <div class="date">
                                    <pre><%= email.date %></pre>
                                </div>
                            </div>
                            <!-- <div class="from">
                                <pre><%= email.from %></pre>
                            </div> -->
                            <div class="body">
                                <pre><%- email.body %></pre>
                            </div>
                        </div>
                        <% }) %>
                            <% } else { %>
                                <p>No emails yet.</p>
                                <% } %>
            </div>
        </section>
        <div class="pagination">
            <% if (totalPages> 1) { %>
                <% if (currentPage> 1) { %>
                    <a href="/messages?page=<%= currentPage - 1 %>&limit=5"
                        class="page-btn">Previous</a>
                    <% } %>

                        <% for (let i=1; i <=totalPages; i++) { %>
                            <a href="/messages?page=<%= i %>&limit=5"
                                class="page-btn <%= i === currentPage ? 'active' : '' %>">
                                <%= i %>
                            </a>
                            <% } %>

                                <% if (currentPage < totalPages) { %>
                                    <a href="/messages?page=<%= currentPage + 1 %>&limit=5"
                                        class="page-btn">Next</a>
                                    <% } %>
                                        <% } %>
        </div>

        <script>
            // Connect to SSE endpoint
            const eventSource = new EventSource("/events");

            eventSource.onmessage = function (event) {
                const email = JSON.parse(event.data);
                console.log("ðŸ“© New Email:", email);

                const container = document.getElementById("emails");
                const div = document.createElement("div");
                div.className = "email";
                div.innerHTML = `
        <div class="subject">${email.subject}</div>
        <div class="from">${email.from}</div>
        <div class="date">${email.date}</div>
        <div class="body">${email.body}</div>
      `;
                container.prepend(div);
            };

            document.querySelectorAll(".sub-link").forEach(link => {
                link.addEventListener("click", event => {
                    event.preventDefault();
                    const type = event.currentTarget.dataset.type;
                    window.location.href = `/messages/getSpecificMessage?type=${type}`;
                });
            });

        </script>
    </main>
</body>

</html>