<style>
    :root {
        --colorI: #f7f2eb;
        --colorII: #ffffff;
        --colorIII: #dde3ff;
        --colorIV: #bad6eb;
        --colorV: #7096d1;
        --colorVI: #334eac;
        --colorVII: #081f5c;
        --shadow: 0 4px 20px rgba(0, 0, 0, 0.07);
    }

    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        font-family: 'Poppins', sans-serif;
    }

    body {
        background-color: var(--colorIV);
        display: flex;
        height: 100vh;
        overflow: hidden;
    }

    /* --- Vertical Navigation Sidebar --- */
    .sidebar {
        margin: 16px;
        background-color: var(--colorII);
        border-right: 1px solid #e0e0e0;
        border-radius: 16px;
        width: 80px;
        height: 100%;
        display: flex;
        flex-direction: column;
        align-items: center;
        padding: 1.5rem 0;
        transition: width 0.3s ease;
    }

    .sidebar:hover {
        width: 180px;
    }

    .sidebar .logo {
        font-size: 2rem;
        color: var(--colorVI);
        margin-bottom: 2rem;
    }

    .sidebar nav {
        display: flex;
        flex-direction: column;
        gap: 1.5rem;
        width: 100%;
    }

    .sidebar .nav-element {
        display: flex;
        align-items: center;
        gap: 1rem;
        color: #7a7a7a;
        text-decoration: none;
        padding: 0.8rem 1.5rem;
        position: relative;
        overflow: hidden;
        white-space: nowrap;
    }

    .sidebar .nav-element .material-icons-sharp {
        font-size: 1.8rem;
        transition: color 0.3s ease;
    }

    .sidebar .nav-element .nav-text {
        font-weight: 500;
        transition: opacity 0.2s ease;
        opacity: 0;
    }

    .sidebar:hover .nav-element .nav-text {
        opacity: 1;
    }

    .sidebar .nav-element:hover,
    .sidebar .nav-element.active {
        color: var(--colorVI);
    }

    .sidebar .nav-element.active {
        background-color: var(--colorIII);
    }

    .sidebar .nav-element.active::before {
        content: '';
        position: absolute;

        left: 0;
        top: 0;
        width: 5px;
        height: 100%;
        background-color: var(--colorVI);
    }

    /* --- Main Content Area --- */
    .main-container {
        flex-grow: 1;
        padding: 2rem;
        overflow-y: auto;
        /* Makes only this container scrollable */
        height: 100vh;
    }

    header {
        margin-bottom: 2rem;
    }

    header h1 {
        font-size: 2.2rem;
        color: var(--colorVII);
        font-weight: 700;
    }

    /* Card Styling for Sections */
    .card {
        background-color: var(--colorII);
        padding: 1.5rem;
        border-radius: 16px;
        box-shadow: var(--shadow);
        margin-bottom: 2rem;
    }

    .card h2 {
        font-size: 1.4rem;
        color: var(--colorVI);
        margin-bottom: 1rem;
    }

    .card p {
        line-height: 1.6;
        color: #555;
    }

    /* Table Styling */
    .table-container h2 {
        margin-bottom: 1.5rem;
    }

    table {
        width: 100%;
        border-collapse: collapse;
        text-align: left;
    }

    thead {
        background-color: #f9f9f9;
    }

    th,
    td {
        padding: 1rem;
        border-bottom: 1px solid #eee;
    }

    th {
        font-weight: 600;
        color: var(--colorVII);
        text-transform: uppercase;
        font-size: 0.85rem;
    }

    tbody tr:hover {
        background-color: #f7faff;
    }

    td .content-link {
        color: var(--colorV);
        text-decoration: none;
        font-weight: 500;
    }

    td .content-link:hover {
        text-decoration: underline;
    }

    #emails {
        max-width: 100%;
        margin: 0;
        padding: 0;
    }

    .email {
        padding: 1rem;
        margin-bottom: 1rem;
        border: 1px solid #eee;
        border-radius: 12px;
        background: var(--colorII);
        box-shadow: var(--shadow);
        transition: transform 0.2s ease;
    }

    .email:hover {
        transform: translateY(-2px);
    }

    .email-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 0.5rem;
    }

    .subject {
        font-weight: 600;
        font-size: 1rem;
        color: var(--colorVI);
    }

    .from {
        color: #555;
        margin-bottom: 0.5rem;
        font-size: 0.9rem;
    }

    .date {
        font-size: 0.85rem;
        color: #999;
    }

    .body {
        color: #444;
        line-height: 1.4;
        font-size: 0.95rem;
    }
</style>

