<body>

    <div class="sidebar-overlay" id="sidebarOverlay"></div>

    <%- include('partials/sidebar') %>

    <main class="main-container">
        <header>
            <h1>
                <%= type %>
            </h1>
            <button class="mobile-menu-toggle" id="mobileMenuToggle">
                <span class="material-icons-sharp">menu</span>
            </button>
        </header>

        <section class="card table-container">
            <h2>Recent Updates</h2>
            <div id="emails">
                <% if (allMails && allMails.length) { %>
                    <% allMails.forEach(email=> { %>
                        <div class="email">
                            <div class="email-header">
                                <div class="subject">
                                    <pre><%= email.subject %></pre>
                                </div>
                                <div class="date">
                                    <pre><%= email.date %></pre>
                                </div>
                            </div>
                            <div class="body">
                                <pre><%- email.body %></pre>
                            </div>
                        </div>
                        <% }) %>
                            <% } else { %>
                                <p>No emails yet.</p>
                                <% } %>
            </div>
        </section>
        <div class="pagination">
            <% if (totalPages> 1) { %>
                <% if (currentPage> 1) { %>
                    <a href="/messages/getSpecificMessage?type=<%= type %>&page=<%= currentPage - 1 %>&limit=5" class="page-btn">Previous</a>
                    <% } %>

                        <% for (let i=1; i <=totalPages; i++) { %>
                            <a href="/messages/getSpecificMessage?type=<%= type %>&page=<%= i %>&limit=5" class="page-btn <%= i === currentPage ? 'active' : '' %>">
                                <%= i %>
                            </a>
                            <% } %>

                                <% if (currentPage < totalPages) { %>
                                    <a href="/messages/getSpecificMessage?type=<%= type %>&page=<%= currentPage + 1 %>&limit=5" class="page-btn">Next</a>
                                    <% } %>
                                        <% } %>
        </div>

    </main>

    <script>
        // Mobile menu toggle
        const mobileMenuToggle = document.getElementById('mobileMenuToggle');
        const sidebar = document.querySelector('.sidebar');
        const sidebarOverlay = document.getElementById('sidebarOverlay');

        if (mobileMenuToggle && sidebar && sidebarOverlay) {
            mobileMenuToggle.addEventListener('click', function() {
                sidebar.classList.toggle('mobile-open');
                sidebarOverlay.classList.toggle('active');
            });

            sidebarOverlay.addEventListener('click', function() {
                sidebar.classList.remove('mobile-open');
                sidebarOverlay.classList.remove('active');
            });
        }
    </script>

    <%- include('partials/sidebarScripts') %>

</body>

</html>