<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Manage User Access</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons+Sharp" rel="stylesheet">
    <style>
        :root {
            --colorI: #f7f2eb;
            --colorII: #ffffff;
            --colorIII: #dde3ff;
            --colorIV: #bad6eb;
            --colorV: #7096d1;
            --colorVI: #334eac;
            --colorVII: #081f5c;
            --shadow: 0 4px 20px rgba(0, 0, 0, 0.07);
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Poppins', sans-serif;
        }

        body {
            background-color: var(--colorIV);
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        .manage-container {
            background-color: var(--colorII);
            padding: 2.5rem 2rem;
            border-radius: 16px;
            box-shadow: var(--shadow);
            width: 100%;
            max-width: 400px;
            text-align: center;
        }

        h1 {
            margin-bottom: 0.5rem;
            color: var(--colorVII);
            font-size: 1.8rem;
            font-weight: 700;
        }

        p {
            margin-bottom: 2rem;
            color: #555;
            font-size: 0.95rem;
        }

        .input-field,
        .dropdown {
            width: 100%;
            padding: 12px 15px;
            margin-bottom: 15px;
            border: 1px solid #ccc;
            border-radius: 12px;
            font-size: 16px;
            box-sizing: border-box;
            background-color: #fff;
            transition: border-color 0.3s ease;
        }

        .input-field:focus,
        .dropdown:focus {
            outline: none;
            border-color: var(--colorV);
        }

        hr {
            border: 0;
            height: 1px;
            background: #e0e0e0;
            margin: 1.5rem 0;
        }

        .button-group {
            display: flex;
            gap: 10px;
            margin-top: 0.5rem;
        }

        .btn {
            flex-grow: 1;
            padding: 12px 20px;
            border: none;
            border-radius: 12px;
            color: white;
            font-size: 16px;
            font-weight: 600;
            cursor: pointer;
            transition: background-color 0.3s ease;
            box-shadow: var(--shadow);
        }

        .btn-add {
            background-color: #28a745;
        }

        .btn-add:hover {
            background-color: #218838;
        }

        .btn-remove {
            background-color: #dc3545;
        }

        .btn-remove:hover {
            background-color: #c82333;
        }

        .popup {
            position: fixed;
            top: -60px;
            left: 50%;
            transform: translateX(-50%);
            background: #4caf50;
            color: white;
            padding: 12px 24px;
            border-radius: 6px;
            font-weight: 500;
            transition: top 0.5s ease, opacity 0.5s ease;
            opacity: 0;
            z-index: 9999;
        }

        .popup.show {
            top: 20px;
            opacity: 1;
        }

        .input-field,
        .dropdown {
            width: 100%;
            padding: 12px 15px;
            margin-bottom: 15px;
            border: 1px solid #ccc;
            border-radius: 12px;
            font-size: 16px;
            box-sizing: border-box;
            background-color: #fff;
            transition: all 0.3s ease;
            color: #333;
            appearance: none;
            background-image: url('data:image/svg+xml;utf8,<svg fill="%237096d1" height="24" viewBox="0 0 24 24" width="24" xmlns="http://www.w3.org/2000/svg"><path d="M7 10l5 5 5-5z"/></svg>');
            background-repeat: no-repeat;
            background-position: right 14px center;
            background-size: 16px 16px;
            cursor: pointer;
        }

        .dropdown:focus {
            outline: none;
            border-color: var(--colorV);
            box-shadow: 0 0 0 3px rgba(112, 150, 209, 0.2);
        }

        .dropdown option {
            color: #333;
            font-size: 15px;
        }

        /* Placeholder-style for first option */
        .dropdown option[value=""] {
            color: #aaa;
        }
    </style>
</head>

<body>

    <div class="manage-container">
        <h1>Manage Users</h1>
        <p>Add or remove users from the system.</p>

        <div class="input-group">
            <input type="email" id="admin-email" class="input-field" placeholder="Your Admin Email" required>
            <input type="password" id="admin-password" class="input-field" placeholder="Your Admin Password" required>
        </div>

        <hr>

        <div class="input-group">
            <input type="email" id="user-email" class="input-field" placeholder="Email to Add or Remove" required>

            <!-- âœ… New Dropdown for Type -->
            <!-- <select id="user-type" class="dropdown" required>
                <option value="" disabled selected>Select Type</option>
                <option value="DSA">DSA</option>
                <option value="ESDL">ESDL</option>
                <option value="CNT">CNT</option>
            </select> -->

        </div>

        <div class="button-group">
            <button class="btn btn-add" id="btn-add">Add User</button>
            <button class="btn btn-remove" id="btn-remove">Remove User</button>
        </div>
    </div>

    <div id="popup-message" class="popup"></div>

    <script>
        document.getElementById("btn-add").addEventListener("click", async () => {
            const email = document.getElementById("admin-email").value;
            const password = document.getElementById("admin-password").value;
            const newEmail = document.getElementById("user-email").value;
            
            try {
                const response = await fetch("/userAdmin/AllowedUser?include=true", {
                    method: "POST",
                    headers: { "Content-Type": "application/json" },
                    body: JSON.stringify({ email, password, newEmail }),
                });

                const data = await response.json();
                showPopup(data.msg || "Operation successful!");

                if (response.ok) {
                    setTimeout(() => {
                        window.location.href = "/messages";
                    }, 1500);
                }
            } catch (err) {
                console.error("Error:", err);
                showPopup("Something went wrong!", true);
            }
        });

        document.getElementById("btn-remove").addEventListener("click", async () => {
            const email = document.getElementById("admin-email").value;
            const password = document.getElementById("admin-password").value;
            const newEmail = document.getElementById("user-email").value;

            try {
                const response = await fetch("/userAdmin/AllowedUser?remove=true", {
                    method: "POST",
                    headers: { "Content-Type": "application/json" },
                    body: JSON.stringify({ email, password, newEmail })
                });

                const data = await response.json();
                showPopup(data.msg || "Operation successful!");

                if (response.ok) {
                    setTimeout(() => {
                        window.location.href = "/messages";
                    }, 1500);
                }
            } catch (err) {
                console.error("Error:", err);
                showPopup("Something went wrong!", true);
            }
        });

        function showPopup(message, isError = false) {
            const popup = document.getElementById("popup-message");
            popup.textContent = message;
            popup.style.background = isError ? "#e74c3c" : "#4caf50";
            popup.classList.add("show");
            setTimeout(() => popup.classList.remove("show"), 3000);
        }
    </script>

</body>

</html>